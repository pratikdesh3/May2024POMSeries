<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="OpenCart App Test Regression Suite" verbose="4"
	thread-count="4" parallel="tests">
	
	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListeners" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>
	
	
	<test name="Login Page Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.test.AccountsPageTest" />
		</classes>
	</test>

	 <test name="Product Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.test.ProductDetailsPageTest" />
		</classes>
	</test>

	 <!-- <test name="Register Page Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.test.RegisterPageTest" />
		</classes>
	</test> -->

</suite>